<setup sysconfigFile="/tmp/tmp.conf" sysconfigPre="/etc/vdr/plugins/setup/local-conf -r -f /tmp/tmp.conf -c /etc" sysconfigPost="/etc/vdr/plugins/setup/local-conf -w -f /tmp/tmp.conf -c /etc" bootLinux="/etc/vdr/rebootvdr" VDRlibDirCMD="/etc/vdr/plugins/setup/local-plugins">
    <plugins sysconfig="rc.local.conf--vdr_pluginopts" protected="setup">
    </plugins>
    <menus>
        <menu name="Manager plugins" help="Enable and disable plugins" system="ActPlugins" />
        <menu name="General Configuration">
            <entry name="Start time" sysconfig="rc.local.conf--vdr_startup_time" type="number" value="300" help="Start time" />
            <entry name="VDR Options" sysconfig="rc.local.conf--vdr_options" type="text" value="-l 0" help="Add options for VDR" />
        </menu>
        <menu name="Directories">
            <entry name="Configuration" sysconfig="rc.local.conf--vdr_confdir" type="directory" value='&quot;/etc/vdr&quot;' help="Configuration files. NOT MODIFY" />
            <entry name="Videos" sysconfig="rc.local.conf--vdr_videodirs" type="directory" value='&quot;/media/LACIE/vdr&quot;' help="Videos directory" />
            <entry name="Plugins" sysconfig="rc.local.conf--vdr_plugindirs" type="directory" value='&quot;/var/media/disk-volume-3/vdr_ng&quot;' help="Plugins Directories. NOT MODIFY" />
        </menu>
        <menu name="EPG Configuration">
            <entry name="EPG File" sysconfig="rc.local.conf--vdr_epgfile" type="file" value='&quot;/etc/vdr/epg.data&quot;' help="EPG file" />
            <entry name="EPG direct" sysconfig="rc.local.conf--vdr_epgdirect" type="bool" value="NO" help="EPG direct" />
        </menu>
        <menu name="USB HardDisk Configuration">
            <entry name="Force USB mount" sysconfig="rc.local.conf--force_usb_mount" type="bool" value="NO" help="Mount USB hard drives before running VDR" />
            <entry name="Devices to stop" sysconfig="rc.local.conf--hd_spindown_dev" type="text" value="/dev/sda" help="USB devices to stop separated by spaces. Ex.: /dev/sda" />
            <entry name="Inactivity time" sysconfig="rc.local.conf--hd_spindown_time" type="number" value="360" help="Inactivity time to stop USB Hard disk" />
            <entry name="Stop devices in shutdown" sysconfig="rc.local.conf--hd_spindown_shutdown" type="bool" value="NO" help="Stop devices in system shutdown" />
            <entry name="Disable swaps in shutdown" sysconfig="rc.local.conf--hd_swap" type="bool" value="NO" help="Disable swap partitions in system shutdown" />
        </menu>
        <menu name="Debug">
            <entry name="Enable syslog" sysconfig="rc.conf--syslogd_flags" type="text" value="NO" help="System log daemon" />
            <entry name="Show OSD messages" sysconfig="rc.local.conf--osddebug" type="bool" value="NO" help="Show debug messages in OSD at startup" />
            <entry name="Memory watch" sysconfig="rc.local.conf--memwatch" type="bool" value="NO" help="Enable memory watch" />
            <entry name="Memory watch - Interval" sysconfig="rc.local.conf--memwatch_interval" type="number" value="60" help="Interval in minutes for save memory logs" />
            <entry name="Memory watch - Directory" sysconfig="rc.local.conf--memwatch_dir" type="directory" value='&quot;/var/media/disk-volume-0/memwatch&quot;' help="Directory for save memory logs" />
        </menu>
    </menus>
</setup>
