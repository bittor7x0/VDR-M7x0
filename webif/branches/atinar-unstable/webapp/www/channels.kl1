		);
		for (i=0;i<channels.length;i++) {
			isTv=boolean(channels.entry[i].vpid>1);
			if (t==0 && !isTv ||t==1 && isTv) continue;
			io_printf(out,
"					<tr>\n"
"						<td class=\"number\" >%d</td>\n"
"						<td class=\"channel\">"
							"<a class=\"channel\" href=\"watchit.kl1?channelnum=%d\">%s</a>"
