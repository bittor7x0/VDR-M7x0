				,RadioId,channels.entry[i].rid
			);
			io_printf(out,
"										</div>\n"
"									</div>\n"
"								</div>\n"
"							</div>\n"
			);
			io_printf(out,
"							<div class=\"boxRight\">"
"								<a class=\"ui-icon %s\" href=\"watchit.kl1?channelnum=%d\">%s</a>\n"
"							</div>\n"
"						</td>\n"
"					</tr>\n"
				,(isTv)?"ui-icon-tv":"ui-icon-radio"
				,channels.entry[i].channelNum
				,LiveStream
			);
		}
		io_printf(out,
"				</table>\n"
		);
	}
	freeCL(&channels);
	io_printf(out,
"				<div style=\"clear:both\"></div>"
"			</div>\n"
	);
	printFooter(out);
