        <plugin name="channelscan" info="channelscan" active="YES" />
        <plugin name="channelswitcher" info="channelswitcher" active="NO" />
        <plugin name="chanorg" info="chanorg" active="NO" />
        <plugin name="cinebars" info="cinebars" active="NO" />
        <plugin name="clock" info="clock" active="NO" />
        <plugin name="conflictcheckonly" info="conflictcheckonly" active="YES" />
        <plugin name="control" info="control" active="NO" />
        <plugin name="cridplayer" info="cridplayer" active="NO" />
        <plugin name="dummydevice" info="dummydevice" active="NO" />
        <plugin name="eggtimer" info="eggtimer" active="NO" />
        <plugin name="epgsearch" info="epgsearch" active="YES" />
        <plugin name="epgsearchonly" info="epgsearchonly" active="YES" />
        <plugin name="epgsync" info="epgsync" active="NO" />
        <plugin name="extrecmenu" info="extrecmenu" active="NO" />
        <plugin name="fepg" info="fepg" active="NO" />
        <plugin name="filebrowser" info="filebrowser" active="NO" />
        <plugin name="freecell" info="freecell" active="NO" />
        <plugin name="fritzbox" info="fritzbox" active="NO" />
        <plugin name="fussball" info="fussball" active="NO" />
        <plugin name="games" info="games" active="NO" />
        <plugin name="hdspace" info="hdspace" active="NO" />
        <plugin name="ircviewer" info="ircviewer" active="NO" />
        <plugin name="launcher" info="launcher" active="NO" />
        <plugin name="message" info="message" active="NO" />
        <plugin name="mlist" info="mlist" active="NO" />
        <plugin name="mpgplayer" info="mpgplayer" active="NO" />
        <plugin name="newsticker" info="newsticker" active="NO" />
        <plugin name="noepgmenu" info="noepgmenu" active="NO" />
        <plugin name="nordlichtsepg" info="nordlichtsepg" active="NO" />
        <plugin name="osdadjust" info="osdadjust" active="NO" />
        <plugin name="osdimage" info="osdimage" active="NO" />
        <plugin name="osdserver" info="osdserver" active="NO" />
        <plugin name="osdteletext" info="osdteletext" active="YES" />
        <plugin name="osdtest256" info="osdtest256" active="NO" />
        <plugin name="pilot" info="pilot" active="NO" />
        <plugin name="pilotskin" info="pilotskin" active="NO" />
        <plugin name="pim" info="pim" active="NO" />
        <plugin name="pin" info="pin" active="NO" />
        <plugin name="prefermenu" info="prefermenu" active="NO" />
        <plugin name="proxy" info="proxy" active="NO" />
        <plugin name="quickepgsearch" info="quickepgsearch" active="NO" />
        <plugin name="quicktimer" info="quicktimer" active="NO" />
        <plugin name="radioinfo" info="radioinfo" active="NO" />
        <plugin name="radiolist" info="radiolist" active="NO" />
        <plugin name="recstatus" info="recstatus" active="NO" />
        <plugin name="remoteosd" info="remoteosd" active="NO" />
        <plugin name="remotetimers" info="remotetimers" active="NO" />
        <plugin name="rssreader" info="rssreader" active="NO" />
        <plugin name="scheduler" info="scheduler" active="NO" />
        <plugin name="setup" info="Gigaset 7x0 Setup" active="YES" protected="YES" />
        <plugin name="showrecinfo" info="showrecinfo" active="NO" />
        <plugin name="skinenigmang" info="skinenigmang" active="YES" />
        <plugin name="skinreel" info="skinreel" active="NO" />
        <plugin name="skinsoppalusikka" info="skinsoppalusikka" active="NO" />
        <plugin name="sleeptimer" info="sleeptimer" active="NO" />
        <plugin name="solitaire" info="solitaire" active="NO" />
        <plugin name="spider" info="spider" active="NO" />
        <plugin name="streamdev" info="streamdev" active="NO" />
        <plugin name="sudoku" info="sudoku" active="NO" />
        <plugin name="suspendoutput" info="suspendoutput" active="NO" />
        <plugin name="svdrpext" info="svdrpext" active="NO" />
        <plugin name="svdrpservice" info="svdrpservice" active="NO" />
