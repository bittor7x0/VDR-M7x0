+extern const char *VideoDirectory;
+static time_t FirstUpdateFileTime=0;
 time_t LastModifiedTime(const char *FileName)
 {
   struct stat fs;
   if (stat(FileName, &fs) == 0)
+  {
+     if(!strncmp(FileName,VideoDirectory,strlen(VideoDirectory)))
+     {
+        if(!FirstUpdateFileTime) 
+           FirstUpdateFileTime=time(NULL);
+        dsyslog("FirstUpdate %s %ld file(%ld)",FileName,FirstUpdateFileTime,fs.st_mtime);
+        if(FirstUpdateFileTime>fs.st_mtime) 
+           return FirstUpdateFileTime; 
+     }
      return fs.st_mtime;
+  } 
+  if((FirstUpdateFileTime)&&(!strncmp(FileName,VideoDirectory,strlen(VideoDirectory))))
+  { 
+     FirstUpdateFileTime=0; 
+     dsyslog("FirstUpdate %s",FileName);
+     return time(NULL); 
+  }
   return 0;
 }
 
