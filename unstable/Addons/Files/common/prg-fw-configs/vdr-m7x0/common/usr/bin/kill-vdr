#!/bin/ash
source /etc/rc.local.conf

/usr/bin/svdrpsend 127.0.0.1 2001 "MESG Cerrando el VDR"
echo "Killing VDR"

trys=0
while [ -e /var/run/runvdr.pid -a ${trys} -le 20 ] ; do
    if [ $(( ${trys} % 5 )) -eq 0 ] ; then
        echo "Try n#$(( ${trys} / 5 + 1 ))"
        killall -15 vdr
    fi
    trys=$(( ${trys} + 1 ))
    sleep 1
done

[ -f /var/run/runvdr.pid ] && killall -9 vdr

[ -f /var/vdr/epg.data -a "${vdr_epgdirect}" = "NO" ] && mv /var/vdr/epg.data ${vdr_epgfile}
