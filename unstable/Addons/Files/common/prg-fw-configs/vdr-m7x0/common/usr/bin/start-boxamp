#!/bin/ash

if  [ -f /etc/bootmenu/bm.local.boxamp.conf ]; then
    source /etc/bootmenu/bm.local.boxamp.conf
    if [ ! -f "${runboxamp}" ]; then
	echo "BoxAmp no está instalado"
    else 
        export ${runboxamp_vars}
        if [ -f /var/run/runvdr.pid ]; then
	    echo "Saliendo de VDR para ejecutar BoxAmp"
        {
            kill-vdr
            ash ${runboxamp}
	    # If ${runboxamp} did not halt, restart vdr
	    start-vdr
	}  > /dev/null 2>&1 & 
	else
	   ash ${runboxamp}                           
	fi
    fi
else
    echo "BoxAmp no está configurado. Edite el archivo /etc/bootmenu/bm.local.boxamp.conf"
fi


