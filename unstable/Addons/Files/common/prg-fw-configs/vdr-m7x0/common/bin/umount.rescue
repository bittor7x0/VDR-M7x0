#--------------------------
# ==> umount rescue system
#--------------------------

cat /proc/mounts \
	| awk '{print $2}' \
	| egrep '^/rescue(/|$)' \
	| sort -r \
	| while read dir
do
    echo ">> umount ${dir}" >&2
    umount "$@" "${dir}" || umount -l "$@" "${dir}"
done
