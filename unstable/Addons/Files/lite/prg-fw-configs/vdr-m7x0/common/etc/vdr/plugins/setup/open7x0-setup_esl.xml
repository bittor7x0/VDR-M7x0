        <plugin name="pilot" info="pilot" active="NO" />
        <plugin name="pilotskin" info="pilotskin" active="NO" />
        <plugin name="pim" info="pim" active="NO" />
        <plugin name="pin" info="pin" active="NO" />
        <plugin name="prefermenu" info="prefermenu" active="NO" />
        <plugin name="proxy" info="proxy" active="NO" />
        <plugin name="quickepgsearch" info="quickepgsearch" active="NO" />
        <plugin name="quicktimer" info="quicktimer" active="NO" />
        <plugin name="radioinfo" info="radioinfo" active="NO" />
