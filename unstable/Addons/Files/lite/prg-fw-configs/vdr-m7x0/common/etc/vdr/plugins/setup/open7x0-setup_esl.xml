<setup sysconfigFile="/tmp/tmp.conf" sysconfigPre="/etc/vdr/plugins/setup/local-conf -r -f /tmp/tmp.conf -c /etc" sysconfigPost="/etc/vdr/plugins/setup/local-conf -w -f /tmp/tmp.conf -c /etc" bootLinux="pic_tool reboot 3 10" VDRlibDirCMD="/etc/vdr/plugins/setup/local-plugins">
    <plugins sysconfig="rc.local.conf--vdr_pluginopts">
        <plugin name="aide" info="Ayuda del VDR" active="YES" />
        <plugin name="autotimer" info="Programador automático" active="NO" />
        <plugin name="blink" info="Controlar LED M7x0" active="NO" />
        <plugin name="browse" info="Navegador EPG" active="NO" />
        <plugin name="chanman" info="Administrador canales" active="NO" />
        <plugin name="channellists" info="Lista de canales" active="YES" />
        <plugin name="channelscan" info="Buscar canales" active="YES" />
        <plugin name="channelswitcher" info="Intercambio de canales" active="NO" />
        <plugin name="chanorg" info="Organizador de canales" active="NO" />
        <plugin name="cinebars" info="Bandas de cine" active="NO" />
        <plugin name="clock" info="Reloj" active="NO" />
        <plugin name="conflictcheckonly" info="Conflictos de programación" active="YES" />
        <plugin name="control" info="Controlar VDR con telnet" active="NO" />
        <plugin name="cridplayer" info="Reproductor CRID" active="NO" />
        <plugin name="dummydevice" info="Dispositivo vacío" active="NO" />
        <plugin name="eggtimer" info="Temporizador" active="NO" />
        <plugin name="epgsearch" info="Buscar en la EPG" active="YES" />
        <plugin name="epgsearchonly" info="Acceso a Buscar en la EPG" active="YES" />
        <plugin name="epgsync" info="Sincronizar EPG" active="NO" />
        <plugin name="extrecmenu" info="Menú extendido grabaciones" active="NO" />
        <plugin name="fepg" info="EPG gráfico" active="NO" />
        <plugin name="filebrowser" info="Explorador de archivos" active="NO" />
        <plugin name="freecell" info="Freecell (juego cartas)" active="NO" />
        <plugin name="fritzbox" info="Llamadas FRITZ!Box" active="NO" />
        <plugin name="fussball" info="Resultados de Bundesliga" active="NO" />
        <plugin name="games" info="Colección de juegos" active="NO" />
        <plugin name="hdspace" info="Controlar espacio disco" active="NO" />
        <plugin name="ircviewer" info="Visor IRC" active="NO" />
        <plugin name="launcher" info="Agrupar otros plugins" active="NO" />
        <plugin name="message" info="Enviar mensajes al VDR" active="NO" />
        <plugin name="mlist" info="Historial de mensajes" active="NO" />
        <plugin name="mpgplayer" info="Reproductor MPEG PS" active="NO" />
        <plugin name="newsticker" info="Noticias RSS" active="NO" />
        <plugin name="nordlichtsepg" info="EPG extendida" active="NO" />
        <plugin name="osdadjust" info="Ajustar OSD" active="NO" />
        <plugin name="osdimage" info="Visor de imágenes" active="NO" />
        <plugin name="osdserver" info="Servidor OSD" active="NO" />
        <plugin name="osdteletext" info="Teletexto" active="YES" />
        <plugin name="osdtest256" info="Calibrar colores TV" active="NO" />
        <plugin name="pilot" info="Navegador EPG Pilot" active="NO" />
        <plugin name="pilotskin" info="Navegador EPG PilotSkin" active="NO" />
        <plugin name="pim" info="Calendario" active="NO" />
        <plugin name="pin" info="Control parental" active="NO" />
        <plugin name="prefermenu" info="Canales preferidos" active="NO" />
        <plugin name="proxy" info="Proxy de otros plugins" active="NO" />
        <plugin name="quickepgsearch" info="Búsqueda rápida en EPG" active="NO" />
        <plugin name="quicktimer" info="Programador rápido" active="NO" />
        <plugin name="radioinfo" info="Información radios" active="NO" />
        <plugin name="radiolist" info="Canales de radio" active="NO" />
        <plugin name="recstatus" info="Estado de grabación" active="NO" />
        <plugin name="remoteosd" info="Menú remoto" active="NO" />
        <plugin name="remotetimers" info="Programaciones remotas" active="NO" />
        <plugin name="rssreader" info="Lector RSS" active="NO" />
        <plugin name="scheduler" info="Programador de tareas" active="NO" />
        <plugin name="setup" info="Configurar firmware" active="YES" protected="YES" />
        <plugin name="showrecinfo" info="Info de grabaciones" active="NO" />
        <plugin name="skinenigmang" info="Piel EnigmaNG" active="NO" />
        <plugin name="skinreel" info="Piel Reel" active="NO" />
        <plugin name="skinsoppalusikka" info="Piel Soppalusikka" active="NO" />
        <plugin name="sleeptimer" info="Apagado automático" active="NO" />
        <plugin name="solitaire" info="Juego del solitario" active="NO" />
        <plugin name="spider" info="Juego Spider" active="NO" />
        <plugin name="streamdev-server" info="Servidor de streaming" active="NO" />
        <plugin name="sudoku" info="Juego Sudoku" active="NO" />
        <plugin name="suspendoutput" info="Suspender salida TV" active="NO" />
        <plugin name="svdrpext" info="Extensiones para SVDRP" active="NO" />
        <plugin name="svdrpservice" info="Servicio SVDRP" active="NO" />
        <plugin name="taste" info="Lista negra de canales" active="NO" />
        <plugin name="timersync" info="Sincronizar programaciones" active="NO" />
        <plugin name="undelete" info="Recuperar grabaciones borradas" active="NO" />
        <plugin name="wapd" info="Control remoto por WAP" active="NO" />
        <plugin name="zaphistory" info="Histórico de Zapping" active="NO" />
    </plugins>
    <menus>
        <menu name="Gestionar plugins" help1="Activar y desactivar plugins" system="ActPlugins" />
        <menu name="Configuración general">
            <entry name="Montar discos USB" sysconfig="rc.local.conf--do_usb_mount" type="bool" value="YES" help1="Montar los discos duros USB al inicio" />
            <entry name="Tiempo de inicio" sysconfig="rc.local.conf--vdr_startup_time" type="number" value="300" help1="Segundos para iniciar VDR antes de una grab. programada" />
            <entry name="Opciones del VDR" sysconfig="rc.local.conf--vdr_options" type="text" value="-l 0 -p 0" help1="Opciones pasadas al ejecutar el VDR (Ver documentación)" />
        </menu>
        <menu name="Configuración de directorios">
            <entry name="Dir. archivos configuración" sysconfig="rc.local.conf--vdr_confdir" type="text" value='&quot;/etc/vdr&quot;' help1="Directorio donde están los archivos de configuración" />
            <entry name="Directorio de grabaciones" sysconfig="rc.local.conf--vdr_videodirs" type="text" value="/var/media/disk-volume-0/vdr/videoVDR" help1="Directorio donde se almacenan las grabaciones" />
            <entry name="Directorio de plugins" sysconfig="rc.local.conf--vdr_plugindirs" type="text" value='&quot;/var/media/disk-volume-3/vdr/plugins&quot;' help1="Directorios separados por espacios donde están los plugins" />
        </menu>
        <menu name="Configuración de la EPG">
            <entry name="Archivo EPG" sysconfig="rc.local.conf--vdr_epgfile" type="text" value='&quot;/etc/vdr/epg.data&quot;' help1="Archivo donde se almacena la información de la EPG" />
            <entry name="EPG inmediata" sysconfig="rc.local.conf--vdr_epgdirect" type="bool" value="NO" help1="Guardar inmediatamente la EPG o sólo al apagar el VDR" />
        </menu>
        <menu name="Configuración de discos USB">
            <entry name="Dispositivo a parar" sysconfig="rc.local.conf--hd_spindown_dev" type="text" value="/dev/sda" help1="Dispositivo USB a detener. Ej.: /dev/sda (Sólo 1 dispositivo)" />
            <entry name="Tiempo de inactividad" sysconfig="rc.local.conf--hd_spindown_time" type="number" value="300" help1="Tiempo de inactividad para detener el disco duro USB" />
            <entry name="Activar swap" sysconfig="rc.local.conf--hd_swap_dev" type="text" value="/dev/sdb2" help1="Activar swap en partición. Ej.: /dev/sdb2 (Sólo 1 dispositivo)" />
        </menu>
        <menu name="Depuración">
            <entry name="Activar servicio syslog" sysconfig="rc.conf--syslogd_flags" type="text" value="NO" help1="Registro del sistema. Dejarlo vacío para activarlo" />
            <entry name="Mostrar mensajes en OSD" sysconfig="rc.local.conf--osddebug" type="bool" value="NO" help1="Mostrar en el OSD la info de procesos al arrancar" />
        </menu>
        <menu name="Control parental">
            <entry name="Código secreto (0000=DES)" sysconfig="CHILDLOCK" type="numtext" setup="childlock" value="0000" help1="Código para proteger el acceso a la configuración del FW" />
        </menu>
    </menus>
</setup>
