        <plugin name="cinebars" info="cinebars" active="NO" />
        <plugin name="clock" info="clock" active="NO" />
        <plugin name="conflictcheckonly" info="conflictcheckonly" active="YES" />
        <plugin name="control" info="control" active="NO" />
        <plugin name="cridplayer" info="cridplayer" active="NO" />
        <plugin name="dummydevice" info="dummydevice" active="NO" />
        <plugin name="eggtimer" info="eggtimer" active="NO" />
        <plugin name="epgsearch" info="epgsearch" active="YES" />
        <plugin name="epgsearchonly" info="epgsearchonly" active="YES" />
        <plugin name="epgsync" info="epgsync" active="NO" />
        <plugin name="extrecmenu" info="extrecmenu" active="NO" />
        <plugin name="fepg" info="fepg" active="NO" />
        <plugin name="filebrowser" info="filebrowser" active="NO" />
        <plugin name="freecell" info="freecell" active="NO" />
        <plugin name="fritzbox" info="fritzbox" active="NO" />
        <plugin name="fussball" info="fussball" active="NO" />
        <plugin name="games" info="games" active="NO" />
        <plugin name="hdspace" info="hdspace" active="NO" />
        <plugin name="ircviewer" info="ircviewer" active="NO" />
        <plugin name="launcher" info="launcher" active="NO" />
        <plugin name="message" info="message" active="NO" />
        <plugin name="mlist" info="mlist" active="NO" />
        <plugin name="mpgplayer" info="mpgplayer" active="NO" />
        <plugin name="newsticker" info="newsticker" active="NO" />
        <plugin name="noepgmenu" info="noepgmenu" active="NO" />
