#!/bin/bash

vdr=VDR-NG
TC_bin=`pwd`/VDR-NG-FW/m7x0_xtc_uclibc_`uname`-`uname -m`/bin

if [[ ! -d "$TC_bin" ]]
then
    echo "ToolChain-bin dir not found: $TC_bin" 1>&2
    exit 1
else
    export PATH="$TC_bin:$PATH"
fi

# Update/Checkout VDR-M7x0 from SVN-o7o
if [[ -d "$vdr/.svn" ]]
then
	echo "Update VDR-M7x0 original"
	svn update -r 320 -q "svn://open7x0.org/vdr-m7x0/branches/andreas-unstable" "$vdr"
else
	echo "Checkout VDR-M7x0 original"
	svn checkout -r 320 -q "svn://open7x0.org/vdr-m7x0/branches/andreas-unstable" "$vdr"
fi

# Patching VDR
if [[ ! -f "$vdr/HISTORY-liemikuutio" ]]
then
	./VDR-NG-FW/patches/patch-kernel.sh ./VDR-NG ./Addons/Files/pro/patches/vdr-m7x0
	./VDR-NG-FW/patches/patch-kernel.sh ./VDR-NG ./Addons/Files/common/patches/vdr-m7x0
	./VDR-NG-FW/patches/patch-kernel.sh ./VDR-NG ./Addons/Patches/vdr-rootfs
fi

# Compiling VDR
( cd $vdr; make )

if [[ -x $vdr/vdr ]]
then
    cp -p $vdr/vdr .
    mips-linux-uclibc-strip vdr
fi
