diff -Naur message-0.0.1-orig/Makefile message-0.0.1/Makefile
--- message-0.0.1-orig/Makefile	2005-01-02 10:59:31.000000000 +0100
+++ message-0.0.1/Makefile	2007-07-30 10:56:57.000000000 +0200
@@ -16,13 +16,13 @@
 ### The C++ compiler and options:
 
 CXX      ?= g++
-CXXFLAGS ?= -O2 -Wall -Woverloaded-virtual -ggdb
+CXXFLAGS ?= -fPIC -O2 -Wall -Woverloaded-virtual -ggdb
 
 ### The directory environment:
 
-DVBDIR = ../../../../DVB
-VDRDIR = ../../..
-LIBDIR = ../../lib
+DVBDIR ?= ../../..
+VDRDIR ?= ../../..
+LIBDIR ?= ../../lib
 TMPDIR = /tmp
 
 ### Allow user defined options to overwrite defaults:
@@ -31,7 +31,7 @@
 
